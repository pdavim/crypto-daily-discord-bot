{
  "name": "crypto-daily-discord-bot",
  "version": "1.0.0",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "config-cli": "./bin/config-cli.js"
  },
  "scripts": {
    "start": "node src/index.js",
    "once": "node src/index.js --once",
    "test:chart": "node tests/render-chart.js",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage --hook-timeout=20000",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "cleanup:reports": "node bin/cleanup-reports.js",
    "docs": "jsdoc -c jsdoc.json && node bin/strip-doc-fonts.js",
    "site:dev": "vitepress dev website/docs",
    "site:build": "vitepress build website/docs",
    "site:preview": "vitepress preview website/docs --host --port 4173"
  },
  "dependencies": {
    "@jvddavid/pino-rotating-file": "^1.0.7",
    "@tensorflow/tfjs": "^4.22.0",
    "@vitalets/google-translate-api": "^9.2.1",
    "axios": "^1.12.2",
    "chart.js": "^4.5.0",
    "chartjs-adapter-luxon": "^1.3.1",
    "chartjs-chart-financial": "0.2.1",
    "chartjs-node-canvas": "^5.0.0",
    "discord.js": "^14.22.1",
    "dotenv": "^17.2.2",
    "form-data": "^4.0.4",
    "lru-cache": "^11.2.2",
    "luxon": "^3.7.2",
    "node-cron": "^3.0.3",
    "openai": "^5.23.0",
    "pino": "^8.21.0",
    "prom-client": "^15.1.3",
    "puppeteer": "^24.22.2",
    "rss-parser": "^3.13.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.2.4",
    "@eslint/js": "^9.9.0",
    "clean-jsdoc-theme": "^4.3.0",
    "eslint": "^9.9.0",
    "globals": "^15.9.0",
    "jsdoc": "^4.0.4",
    "vitepress": "^1.3.3",
    "vitest": "^3.2.4"
  }
}
